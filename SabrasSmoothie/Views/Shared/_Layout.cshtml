<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top" >
        <div class="container h-25">
            <div class="navbar-header">
                @Html.ActionLink("Sabras", "Index", "Home", new { area = "" }, new { @class = "sabras-logo" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "About")</li>
                    <li>@Html.ActionLink("MyOrders", "Index", "MyOrders")</li>
                </ul>
                <ul class="nav navbar-nav pull-right">
                @if (Session["User"] != null && (bool)Session["User"] == true)
                {
                    <li>Welcome, @Session["UserFullName"]</li>
                    <li class="logout">@Html.ActionLink("Logout", "Logout", "Login")</li>
                }
                else if (Session["Admin"] != null && (bool)Session["Admin"] == true)
                {
                    <li>Welcome, Admin</li>
                    <li class="logout">@Html.ActionLink("Logout", "Logout", "Login")</li>
                }
                else
                {
                    <li>@Html.ActionLink("Register", "Index", "Register")</li>
                    <li>@Html.ActionLink("Login", "Index", "Login")</li>
                }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year Jenkins Team</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
