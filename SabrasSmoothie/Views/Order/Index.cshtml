@model IEnumerable<SabrasSmoothie.Models.Order>

@{
    ViewBag.Title = "Index";
}
@if ((Session["User"] == null || (bool)Session["User"] != true))
{
    <h1>Nice Try!</h1>
    <h2>But Our Site Is Unhackable.</h2>
    <h3>This Page Is for Users Only</h3>
    <h4>Please Register Or Sign In Like All The Others</h4>
    <div>
        @Html.ActionLink("Back to Home", "Index", "Home")
    </div>
}
else
{
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
