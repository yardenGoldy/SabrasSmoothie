@{
    ViewBag.Title = "Home Page";
}

<div style="text-align:center">
    <form method="post" action="Home/Search">
        <input type="text" size="50" placeholder="Search for anything..." name="message">
        <input type="submit" class="fa fa-search"/>
    </form>
</div>
<div class="container home">
    <div class="params">
        <h4>Price</h4>
        <div class="options">
            <div class="option">
                <a href="#">
                    <input type="checkbox" class="first-checkbox">
                    <label><span class="first-label">Under ILS 100</span><span class="grouped">(@ViewBag.productsByPrice[0].Count)</span></label>
                </a>
            </div>
            <div class="option">
                <a class="cbx prRng" href="#">
                    <input aria-hidden="true" tabindex="-1" type="checkbox" class="second-checkbox">



                    <label><span class="first-label">ILS 110.00 - ILS 405.00</span><span class="grouped">(@ViewBag.productsByPrice[1].Count)</span></label>
                </a>
            </div>
            <div class="option">
                <a class="cbx prRng" href="#">
                    <input aria-hidden="true" tabindex="-1" type="checkbox" class="Third-checkbox">



                    <label><span class="first-label">Over ILS 100</span><span class="grouped">(@ViewBag.productsByPrice[2].Count)</span></label>
                </a>
            </div>
        </div>
        <div class="price-paramater">
            <label>ILS</label>
            <input class="price" pattern="\d*" type="text" size="3" maxlength="13" value="">
            <label> to ILS</label>
            <input class="price" pattern="\d*" type="text" size="3" maxlength="13" value="">
            <a href="#" class="btn btn-info btn-xs">
                <span class="glyphicon glyphicon-menu-right"></span>
            </a>
        </div>
        <h4>Calories</h4>
        <div class="options">
            <div class="option">
                <a href="#">
                    <input type="checkbox" class="first-checkbox">
                    <label><span class="first-label">Under Cal 100</span><span class="grouped">(@ViewBag.productsByCalories[0].Count)</span></label>
                </a>
            </div>
            <div class="option">
                <a class="cbx prRng" href="#">
                    <input aria-hidden="true" tabindex="-1" type="checkbox" class="second-checkbox">
                    <label>
                        <span class="first-label">Cal 110.00 - Cal 405.00</span>
                        <span class="grouped">(@ViewBag.productsByCalories[1].Count)</span>
                    </label>
                </a>
            </div>
            <div class="option">
                <a class="cbx prRng" href="#">
                    <input aria-hidden="true" tabindex="-1" type="checkbox" class="Third-checkbox">



                    <label><span class="first-label">Over Cal 100</span><span class="grouped">(@ViewBag.productsByCalories[2].Count)</span></label>
                </a>
            </div>
        </div>
        <div class="price-paramater">
            <label>Cal</label>
            <input class="price" pattern="\d*" type="text" size="3" maxlength="13" value="">
            <label> to Cal</label>
            <input class="price" pattern="\d*" type="text" size="3" maxlength="13" value="">
            <a href="#" class="btn btn-info btn-xs">
                <span class="glyphicon glyphicon-menu-right"></span>
            </a>
        </div>
        <div class="features">
            <h4>Features</h4>
            <label>Is Vegan</label>
            <input aria-hidden="true" tabindex="-1" type="checkbox" class="vegan">
        </div>
    </div>

    <div class="items">
        @foreach (var product in ViewBag.Products)
        {
            <pre class="products-catalog" data-toggle="tooltip" data-placement="bottom" title="@product.Description">
                <div class="title">
                    <h4>@product.Name</h4>
                    @if (product.IsVegan)
                    {
                        <a><span class="glyphicon glyphicon-leaf" title="vegan"></span></a>
                    }

                </div>
                <span>
                    <a title="Add to cart" href="#" class="btn btn-default btn-add-to-cart btn-xs">
                        <span class="glyphicon glyphicon-shopping-cart"></span> Add to cart

                    </a>
                </span>
            <img src="@product.ImagePath" />



<div class="firstLine">
    <h4>@product.Price$</h4>
    <h4>@product.Calories Calories</h4>
</div>
</pre>
        }

    </div>

</div>
